{
  "name": "rastreamento-cargas-api",
  "version": "1.0.0",
  "description": "API RESTful para rastreamento de cargas com Node.js, Express, TypeScript e Prisma",
  "main": "dist/main/server.js",
  "scripts": {
    "dev": "tsx watch src/main/server.ts",
    "build": "tsc",
    "start": "node dist/main/server.js",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "diagrams:png": "cd docs/c4/plantuml && plantuml -tpng *.puml",
    "diagrams:svg": "cd docs/c4/plantuml && plantuml -tsvg *.puml",
    "diagrams:all": "npm run diagrams:png && npm run diagrams:svg",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"prisma/**/*.ts\""
  },
  "keywords": [
    "rastreamento",
    "cargas",
    "tracking",
    "nodejs",
    "express",
    "typescript",
    "prisma",
    "clean-architecture"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.21.0",
    "pino-http": "^9.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.3.2",
    "prisma": "^5.22.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
